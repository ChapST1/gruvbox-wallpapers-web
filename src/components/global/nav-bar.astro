---
import DarkMode from "./dark-mode.astro";
import NavbarDesktop from "./navbar-desktop.astro";



const { category = "home" } = Astro.params;


const key = [
  { letter: "W", color: "var(--red)" },
  { letter: "A", color: "var(--green)" },
  { letter: "L", color: "var(--yellow)" },
  { letter: "L", color: "var(--blue)" },
  { letter: "P", color: "var(--purple)" },
  { letter: "A", color: "var(--aqua)" },
  { letter: "P", color: "var(--orange)" },
  { letter: "E", color: "var(--red)" },
  { letter: "R", color: "var(--blue)" },
  { letter: "S", color: "var(--green)" },
];
---

<header
  class="h-16 w-full mx-auto duration-300 bg-transparent flex items-center  justify-between px-2 fixed top-0 left-0 z-50"
>
  <a href="/" class="h-10 md:h-auto flex items-center justify-center">
    <h1
      class="font-bold text-xl  md:text-2xl justify-center md:justify-start flex gap-3"
    >
    <span class="*:font-extrabold flex items-center justify-center gap-1">
      {key.map(({letter, color}) => <span set:text={letter} style=`color: ${color};` />)}
    </span>

    </h1>
  </a>

<NavbarDesktop/>
</header>

<style scoped>

header{
    z-index: 30;
    height: auto;
    pointer-events: none;
    @apply py-3
}
header a {
    @apply border border-transparent;
    animation: startNavigation forwards;
    animation-timeline: scroll(root);
    animation-range: entry 5% exit 20%;
    pointer-events: auto;
}



</style>
