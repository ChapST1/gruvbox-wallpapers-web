<button class="full-screen-trigger" data-isActive="false">
    <svg
        xmlns="http://www.w3.org/2000/svg"
        class="open w-6 text-primary dark:text-color-text"
        viewBox="0 0 24 24"
        ><path
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 9V6a2 2 0 0 1 2-2h3m11 11v3a2 2 0 0 1-2 2h-3m0-16h3a2 2 0 0 1 2 2v3M9 20H6a2 2 0 0 1-2-2v-3"
        ></path></svg
    >

    <svg
        xmlns="http://www.w3.org/2000/svg"
        class="no-open w-6 text-primary dark:text-color-text"
        viewBox="0 0 24 24"
        ><path
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 4v3a2 2 0 0 1-2 2H4m11 11v-3a2 2 0 0 1 2-2h3m0-6h-3a2 2 0 0 1-2-2V4M4 15h3a2 2 0 0 1 2 2v3"
        ></path></svg
    >
</button>

<script>
    document.addEventListener("astro:page-load", () => {
        const fullScreen = document.querySelector(".full-screen-trigger");

        fullScreen?.addEventListener("click", () => {
            enableFullScreen();
        });

        async function enableFullScreen() {
            const html = document;
            if (html.fullscreenElement) {
                html.exitFullscreen();
                fullScreen?.setAttribute("data-isActive", "false");
                return;
            }
            html.documentElement.requestFullscreen();
            fullScreen?.setAttribute("data-isActive", "true");
        }
    });
</script>

<style scoped>
    button[data-isActive="true"] .open {
        display: none;
    }
    button[data-isActive="false"] .no-open {
        display: none;
    }
</style>
