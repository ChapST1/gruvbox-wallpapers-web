---
import type { Wallpaper } from "src/types";

interface Props extends Wallpaper {}

const { image, thumb, hasLightMode } = Astro.props;
---

{
    !hasLightMode.status && (
        <figure
            class="h-auto md:h-52 w-full block rounded-md overflow-hidden duration-300 group cursor-pointer"
            id="wallpaper-item"
        >
            <picture class={`w-full h-full block rounded overflow-hidden `}>
                <img
                    loading="lazy"
                    src={thumb}
                    data-large-img={image}
                    data-thumb-img={thumb}
                    alt={`wallpaper`}
                    class="wallpaper-image w-full group-hover:scale-110 h-full duration-300 object-cover"
                />
            </picture>
        </figure>
    )
}

<style scoped>
    figure {
        @apply border border-border dark:border-border-dark p-1;
    }
</style>
