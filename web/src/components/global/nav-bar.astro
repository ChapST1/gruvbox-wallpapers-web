---
import NavbarDesktop from "./navbar-desktop.astro";
import NavbarMobile from "./navbar-mobile.astro";



const { category = "home" } = Astro.params;


const key = [
  { letter: "G", color: "var(--red)" },
  { letter: "R", color: "var(--green)" },
  { letter: "U", color: "var(--yellow)" },
  { letter: "V", color: "var(--blue)" },
  { letter: "B", color: "var(--purple)" },
  { letter: "O", color: "var(--aqua)" },
  { letter: "X", color: "var(--orange)" },
];
---

<header
  class="h-16 bg-bg/95 dark:bg-bg-dark/95 border-b border-border dark:border-border-dark md:backdrop-blur-md flex items-center justify-center md:justify-between px-2 sticky top-0 left-0 z-50"
>
  <a href="/">
    <h1
      class="font-bold text-2xl text-primary-dark dark:text-primary justify-center md:justify-start flex gap-3"
    >
    <span class="*:font-extrabold flex items-center justify-center gap-1">
      {key.map(({letter, color}) => <span set:text={letter} style=`color: ${color};` />)}
    </span>
    
      Wallpapers
    </h1>
  </a>

  <NavbarDesktop category={`${category}`}/>
  <NavbarMobile  category={`${category}`}/>
  
</header>


